@using BasicFrontend.Umbraco.Controllers
@using System.Web.Mvc

@model BasicFrontend.Umbraco.Models.ContactViewModel

@using (Html.BeginUmbracoForm<ContactSurfaceController>("CreateContactMessage"))
{

    if (!ViewData.ModelState.IsValid)
    {
        @Html.ValidationSummary(true, "Houston, we have a problem. Check things over and try again.", new { @class = "col-sm-12 alert alert-warning align-center" })
    }

    <div class="form-group row">
        @Html.LabelFor(x => x.Name, new { @class = "col-sm-4 col-form-label" })
        @Html.TextBoxFor(x => x.Name, new { @class = "col-sm-8 form-control" })
        <div class="col-sm-12 align-right">
            @Html.ValidationMessageFor(x => x.Name)
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.EmailAddress, new { @class = "col-sm-4 col-form-label" })
        @Html.TextBoxFor(x => x.EmailAddress, new { @class = "col-sm-8 form-control" })
        <div class="col-sm-12 align-right">
            @Html.ValidationMessageFor(x => x.EmailAddress)
        </div>
    </div>

    <div class="form-group row">
        @Html.LabelFor(x => x.Message, new { @class = "col-sm-4 col-form-label" })
        @Html.TextAreaFor(x => x.Message, new { @class = "col-sm-8 form-control" })
        <div class="col-sm-12 align-right">
            @Html.ValidationMessageFor(x => x.Message)
        </div>
    </div>

    <div class="form-group row">
        <input type="submit" class="button small" value="Submit" />
    </div>

}